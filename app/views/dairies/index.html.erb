<p id="notice"><%= notice %></p>

<h1>Dairies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dairies.each do |dairy| %>
      <tr>
        <td><%= dairy.title %></td>
        <td><%= dairy.body %></td>
        <td><%= link_to 'Show', dairy %></td>
        <td><%= link_to 'Edit', edit_dairy_path(dairy) %></td>
        <td><%= link_to 'Destroy', dairy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

